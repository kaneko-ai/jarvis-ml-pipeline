    "status": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "root_cause_guess": {
      "type": "string"
    },
    "recommendation_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "preventive_checks": {
      "type": "array",
      "items": {
        "type": "string"
      }
