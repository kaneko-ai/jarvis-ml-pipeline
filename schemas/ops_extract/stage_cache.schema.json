{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ops_extract stage cache",
  "type": "object",
  "required": [
    "schema_version",
    "version",
    "stages"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "stages": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "input_hash",
          "outputs",
          "status",
          "updated_at"
        ],
        "properties": {
          "input_hash": {
            "type": "string",
            "minLength": 1
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "path",
                "sha256"
              ],
              "properties": {
                "path": {
                  "type": "string"
                },
                "sha256": {
                  "type": [
                    "string",
                    "null"
                  ]
                }
              },
              "additionalProperties": true
            }
          },
          "status": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
